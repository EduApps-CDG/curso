<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:gravity="center_horizontal">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/text"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:padding="10dp"
		android:gravity="center"/>

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Isto é o TextInputLayout, que é Deprecated e pode ser substituida pelo EditText"/>

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Isto é o Plain Text, que é um EditText"/>

	<EditText
		android:layout_width="match_parent"
		android:inputType="textEmailAddress"
		android:layout_height="wrap_content"
		android:ems="10"
		android:hint="isto é um EditText de email"/>

	<EditText
		android:layout_width="match_parent"
		android:inputType="textPassword"
		android:layout_height="wrap_content"
		android:ems="10"
		android:hint="Isto é um EditText de senha"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:padding="10dp">

		<CheckBox
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:checked="true"
			android:checkable="false"
			android:text="Isto é uma CheckBox, mas você não pode apertar porque eu não deixo!"
			android:layout_weight="1.0"
			android:layout_marginRight="10dp"
			android:enabled="true"
			android:clickable="false"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Isto é um botão"/>

	</LinearLayout>

	<RadioGroup
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RadioButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Matar o Josias"
			android:enabled="true"
			android:padding="10dp"/>

		<View
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"
			android:layout_height="1dp"/>

		<RadioButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Não matar o Josias"
			android:clickable="false"
			android:enabled="false"
			android:padding="10dp"/>

		<View
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"
			android:layout_height="1dp"/>
	</RadioGroup>

</LinearLayout>

